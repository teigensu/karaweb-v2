.widget
    .menu-list
        li
            ul
                margin-right: 0

        .level
            margin-bottom: 0

            .level-left, .level-right, .level-item
                flex-shrink: 1

            .level-left, .level-right
                align-items: flex-start

        .tag
            background: $light-grey
            color: $white-invert

    .tags
        .tag:first-child
            background: $primary
            color: $primary-invert

        .tag:last-child
            background: $light-grey
            color: $white-invert

    .author-title-container
        position: relative
        height: 1.5rem  // 保持高度固定防止布局跳动
        
        .author-title
            position: absolute
            left: 0
            right: 0
            margin: 0 auto
            transition: all 0.3s ease  // 平滑过渡效果
            white-space: nowrap  // 防止文字换行
            
            &.normal
                opacity: 1
                transform: translateY(0)
                
            &.hover
                opacity: 0
                transform: translateY(8px)  // 初始位置下移
                
        &:hover
            .normal
                opacity: 0
                transform: translateY(-8px)  // 上移并淡出
                
            .hover
                opacity: 1
                transform: translateY(0)  // 回到正常位置并淡入

.level.is-multiline
    flex-wrap: wrap

/* ---------------------------------
 *      Table of Content Widget
 * --------------------------------- */
+mobile()
    .widget.card#toc
        display: none
        position: fixed
        margin: 1rem
        left: 0
        right: 0
        bottom: 0
        z-index: 100

        .card-content
            padding: 0

        .menu
            padding: 1.5rem
            max-height: calc(100vh - 2rem)
            overflow-y: auto

    #toc-mask
        display: none
        position: fixed
        top: 0
        left: 0
        right: 0
        bottom: 0
        z-index: 99
        background: rgba(0, 0, 0, .7)

    .widget.card#toc, #toc-mask
        &.is-active
            display: block